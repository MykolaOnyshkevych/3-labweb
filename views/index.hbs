    <div id="popup__edit" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="#header" class="popup__close close__popup">X</a>
                <h2 class="edit__title">Edit exercise</h2>
                <div class="edit__container">
                    <div class="edit__item">
                        <h1 class="edit__input__title">Model</h1>
                        <input 
                            id="edit__input__name"
                            class="input" 
                            type="text" 
                            placeholder="Enter model">
                    </div>
                    <div class="edit__item">
                        <h1 class="edit__input__title">Weight in kilos</h1>
                        <input 
                            id="edit__input__weight"
                            class="input" 
                            type="number" 
                            placeholder="Enter weight">
                    </div>
                    <div class="edit__item">
                        <h1 class="edit__input__title">Price</h1>
                        <input 
                            id="edit__input__price"
                            class="input" 
                            type="number" 
                            placeholder="Enter price">
                    </div>
                       
                </div>
                <input id="submit__edit__exercise__btn" class="submit__edit__exercise__btn" type="button" value="Submit"/>
            </div>
        </div>    
