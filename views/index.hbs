<div class="wrapper">
        <div class="left__block">
            <div class="left__block__content">
                <div class="left__block__content__sort">
                    <h2 class="left__block__title manage_exercise">Manage Exercises</h2>
                    <div class="sort">
                        <label for="sort__select">Sort By</label>
                        <select id="sort__select" onchange="showExerciseListSorted()">
                            <option value="none">none</option>
                            <option value="model">model</option>
                            <option value="weightInKilos">weight in kilos</option>
                            <option value="price">price</option>
                        </select>
                    </div>
                </div>
                <hr>
