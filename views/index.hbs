        <div class="popup__body">
            <div class="popup__content">
                <a href="#header" class="popup__close close__popup">â˜’</a>
                <h2 class="add__title">Add exercise</h2>
                <div class="add__container">
                    <div class="add__item">
                        <h1 class="add__input__title">Model</h1>
                        <input 
                            id="add__input__model"
                            class="input" 
                            type="text" 
                            placeholder="Enter name">
                    </div>
                    <div class="add__item">
                        <h1 class="add__input__weight">Weight in kilos</h1>
                        <input 
                            id="add__input__weight"
                            class="input" 
                            type="number" 
                            placeholder="Enter area">
                    </div>
                    <div class="add__item">
                        <h1 class="add__input__title">Price</h1>
                        <input 
                            id="add__input__price"
                            class="input" 
                            type="number" 
                            placeholder="Enter price">
                    </div>
                <input id="submit__add__exercise__btn" class="submit__add__exercise__btn" type="button" value="Submit"/>
            </div>
        </div>    
    </div>
